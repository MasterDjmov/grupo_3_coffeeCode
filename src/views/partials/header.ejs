                <a href="/"><img src="/img/logo.svg" alt="Logo del Café" class="logo"></a>
            </div>
            <nav>
                <ul class="nav-links">
                  
                    <li><% if(user.categoria==="ADMINISTRADOR"){%>
                            <a class="link-a" href="/admin/create" style="display: flex;"><i class="fas fa-plus-circle" style="padding-right: 2px;"></i> PRODUCTOS</a></li>
