<header>
        <div class="frase">
            <h5>"UN BUEN CAFÉ PUEDE TRANSFORMAR UN MAL DÍA EN UNA VICTORIA"</h5>
        </div>
        <div class="header-content">
            <div>
                <a href="/"><img src="/img/logo.svg" alt="Logo del Café" class="logo"></a>
            </div>
            <nav>
                <ul class="nav-links">
                  
                    
                    <% if(user && user.id_rol===1){%>
                        <li>
                            <a class="link-a" href="/admin/create" style="display: flex;"><i class="fas fa-plus-circle" style="padding-right: 2px;"></i> AGREGAR</a>
                        </li>
                        <li>
                        
                    <% } %>
                  
                    </li>
                    <li><a class="link-a" href="/#productos">PRODUCTOS</a></li>
                    <li><a class="link-a" href="/about">INFORMACIÓN</a></li>
                    <li class="search-container">
                        <form action="/products/search" method="GET">
                            <input type="text" name="query" placeholder="¿Qué estás buscando?">
                            <button type="submit">BUSCAR</button>
                        </form>
                    </li>
                    <% if(user){%>   
                    <li class="dropdown">
                        <button  class="dropdown-button" id="dropdownMenuButton1">
                            <img src="/img/carrito.png" alt="Carrito de Compras" width="30px">
                        </button>
                        
                        <div class="dropdown-menu" id="dropdownMenu">
                            <div class="carrito-panel1">
                                <% if(carrito && carrito.length > 0){%>   
                                   
                                <form action="/products/checkout" method="get" class="carrito-form1">
                                             
                                       <h2>CARRITO</h2>
                                    <div class="carrito-body1">
                                            <div class="carrito-items1">
                                                <% carrito.forEach(item => { %>
                                                    <div class="carrito-item1" >
                                                        <div class="carrito-item-imagen1">
                                                            <img src="/img/products/<%= item.cafe.imagen_principal %>">                           
                                                        </div>
                                                        <div class="carrito-item-detalle1">
                                                            <h5 class="carrito-item-name1">
                                                                <%= item.nombre_producto %>
                                                            </h5>
                                                        
                                                    
                                                            <p class="carrito-item-descripcion1">
                                                            
                                                                ELEGÍ TU MOLIENDA: 
                                                                <%= item.id_tipo_cafe %>
                                                            </p>
                                                            <p class="carrito-item-descripcion1">
                                                                ELEGÍ EL PESO: 
                                                                <%= item.idunidad_medida %>                            
                                                            
                                                            </p>
                                                        </div>
                                                        <div class="carrito-item-delete1">
                                                            <button type="button">
                                                            <i class="fa fa-close"></i>
                                                            </button>
                                                        </div>                           
                                                        
                                                    </div>
                                                <% }) %>
                                               
                                                <div class="carrito-item-subtotal1">
                                                    <p> 2 × $12,200.00</p>
                                                </div>
                                            </div>                    
                                            <div class="carrito-total1">
                                                <h4>Subtotal: <span>$128.400,00</span></h4>                        
                                            </div>       
                                              
                                            <div class="carrito-botones1">
                                               <a href="/products/edit/1" class="carrito-btn-ver1">VER CARRITO</a>               
                                               <input type="submit" class="carrito-btn-fin1" value="FINALIZAR LA COMPRA" name="fin_compra">                   
                                            </div> 
                                                   
                                    </div>
                                </form>
                            </div>
                        </div>
                    </li>
                    <% } else { %>
                        <h2>CARRITO VACIO</h2>
                    <% }%>    
                    <% } %>
                    <li class="login1">
                        <a href="/user/login">
                            <% if(user){%>
                                <a title="Perfil" href="/user/profile"><img src="/img/perfil/<%= user.imagen_perfil %>" alt="Login"></a>
                             <% } else { %>
                                <img src="/img/login.png" alt="Login" title="Login">
                            <% } %>
                        </a>
                    </li>
                    <% if(user){%>
                        <li><a href="/logout"><i class="fas fa-times-circle"></i>salir</a></li>
                    <% }%>                   
                </ul>
            </nav>
        </div>
    </header>