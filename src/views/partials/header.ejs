                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton1" style="background-color: #a99ac4; transform: translateX(0) !important;">
                            <div class="cart-panel1">
    
                                <form action="/products/checkout" method="get" class="cart-form1">
                                             
                                       <h2>CARRITO</h2>
                                    <div class="cart-body1">
