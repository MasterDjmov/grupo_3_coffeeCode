<%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="/css/productCart.css">
</head>
<body>
    <header>
        <div class="frase">
            <h4>TU ÉXITO Y TU FELICIDAD DEPENDEN DE TÍ</h4>
        </div>   


    </header>
   
    <main class="cart-panel">
    
        <form action="/products/checkout" method="get" class="cart-form">
                     
               <h2>CARRITO</h2>
            <div class="cart-body">
                    <div class="cart-items">
                        <div class="cart-item" >
                            <div class="cart-item-imagen">
                                <img src="/img/imagen_producto.jpg">                           
                            </div>
                            <div class="cart-item-detalle">
                                <h5 class="cart-item-name">
                                    BLEND DE LA CASA
                                </h5>
                            
                        
                                <p class="cart-item-descripcion">
                                
                                    ELEGÍ TU MOLIENDA: 
                                    En Grano
                                </p>
                                <p>
                                    ELEGÍ EL PESO: 
                                    250 Gr.                             
                                
                                </p>
                            </div>
                            <div class="cart-item-delete">
                                <button type="button">
                                <i class="fa fa-close"></i>
                                </button>
                            </div>                           
                            
                        </div>
                        <div class="cart-item-subtotal">
                            <p> 2 × $12,200.00</p>
                        </div>
                    </div>                    
                    <div class="cart-total">
                        <h2>Subtotal: <span>$128.400,00</span></h2>                        
                    </div>               
                    <div class="botones">
                        <a href="/products/edit" class="btn-ver">VER CARRITO</a>               
                        <input type="submit" class="btn-fin" value="FINALIZAR LA COMPRA" name="fin_compra">                   
                    </div>              
             </div>
        </form>
    </main>
    
    <%- include('../partials/footer.ejs') %>
    
</body>
</html>
