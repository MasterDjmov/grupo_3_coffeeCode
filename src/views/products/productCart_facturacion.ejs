<%- include('../partials/head.ejs') %>
<link rel="stylesheet" href="/css/productCart_facturacion.css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

</head>
<body>
   <%- include('../partials/header.ejs') %>
   <main class="cart-panel1">
      <div class="container">
         <!-- Formulario -->
         <form action="medios-de-pago" method="get" id="formulario-tarjeta" class="formulario-tarjeta">
            <div class="form-group">
               <label>SELECCIONA MEDIO DE PAGO</label>
               <select class="form-control col-md-3" >
                  <option value="0">seleccione</option>
                  <option value="1">Efectivo</option>
                  <option value="2">Tarjeta de credito</option>
                  <option value="3">Tarjeta de debito</option>
                  <option value="4">RapiPago</option>
                  <option value="5">PagoFacil</option>
                  <option value="6">Transferencia</option>
               </select>
            </div>
            <div class="form-group">  
               <label for="inputNumero">Número Tarjeta</label>
               <input type="text" id="inputNumero" maxlength="19" autocomplete="off" class="form-control">
            </div>
            <div class="form-group">
               <label for="inputNombre">Nombre completo</label>
               <input type="text" id="inputNombre" maxlength="19" autocomplete="off" class="form-control">
            </div>
            <div class="flexbox">
               <div class="grupo_expira">
                   <label for="selectMes">Expiracion</label>
                   <div class="flexbox-botones">
                       <div class="form-group">
                           <select name="mes" id="selectMes" class="form-control">
                               <option value="0">Mes</option>
                               <option value="0">Enero</option>
                               <option value="0">Febrero</option>
                               <option value="0">Marzo</option>
                               <option value="0">Abril</option>
                               <option value="0">Mayo</option>
                               <option value="0">Junio</option>
                               <option value="0">Julio</option>
                               <option value="0">Agosto</option>
                               <option value="0">Septiembre</option>
                               <option value="0">Octubre</option>
                               <option value="0">Noviembre</option>
                               <option value="0">Diciembre</option>
                           </select>
                       </div>
                       <div class="form-group">
                           <select name="year" id="selectYear" class="form-control">
                               <option value="0">Año</option>
                               <option value="2023">Año</option>
                               <option value="2024">Año</option>
                               <option value="2025">Año</option>
                           </select>
                       </div>
                       <div class="form-group" id="cvv">
                        <input type="text" id="inputCCV" maxlength="3" class="form-control" placeholder="CCV">
                    </div>
                    
                   </div>
               </div>
           </div>
           <div class="botonera">
               <button type="reset" class="btn btn-primary">Cancelar</button>
               <button type="submit" class="btn btn-success">Enviar</button>
            </div>
         </form>  
         <div class="envio" style="border:1px solid white;padding-left: 1rem;">
            <div class="form-group metodoEnvio">        
               <p style="font-size: 18px;">SELECCIONA MEDIO DE ENVIO</P>
               <select Medios de envio="select" class="form-control co-3">
                  <option value="0">seleccione</option>
                  <option value="1">A domicilio</option>
                  <option value="2">Andreani</option>
                  <option value="3">Correo Argentino</option>
               </select>
            </div>  
            <div class="cart-total">
               <h5>TOTAL DEL CARRITO: </h5>
               <div class="subtotal">
                  <p>Subtotal</p>
                  <span class="total"> $128.400,00</span>
               </div>
               <br>
               <a class="btn btn-success btn-block" href="/products/checkout">FINALIZAR COMPRA</a>
            </div>
         </div> 
      </div>   
        
      
   </main>
   <%- include('../partials/footer.ejs') %>
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

   <script src="/js/coffecode.js"></script>
   <script>
      document.addEventListener('DOMContentLoaded', function() {
         const totalAPagar = localStorage.getItem('totalValue');
         if (totalAPagar) {
            const mostrarTotal = document.querySelector('.total');
            if (mostrarTotal) {
                mostrarTotal.textContent = `$${parseFloat(totalAPagar).toFixed(2)}`;
            }
         }
      });
   </script>
   
</body>
</html>