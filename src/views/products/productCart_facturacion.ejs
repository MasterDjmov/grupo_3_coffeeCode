<%- include('../partials/head.ejs') %>
<link rel="stylesheet" href="/css/productCart_facturacion.css">
</head>
<body>
   <%- include('../partials/header.ejs') %>
   <main class="cart-panel1">
      <div class="container" style="border:1px solid white;">

         <p style="font-size: 18px;">SELECCIONA MEDIO DE PAGO</P>
         <select Medios de pago="select">
            <option value="0">seleccione</option>
            <option value="1">Efectivo</option>
            <option value="2">Tarjeta de credito</option>
            <option value="3">Tarjeta de debito</option>
            <option value="4">RapiPago</option>
            <option value="5">PagoFacil</option>
            <option value="6">Transferencia</option>
         </select>
         <!-- Formulario -->
         <form action="medios-de-pago" method="get" id="formulario-tarjeta" class="formulario-tarjeta">
            <div class="grupo">  
               <label for="inputNumero">Número Tarjeta</label>
               <input type="text" id="inputNumero" maxlength="19" autocomplete="off">
            </div>
            <div class="grupo">
               <label for="inputNombre">Nombre completo</label>
               <input type="text" id="inputNombre" maxlength="19" autocomplete="off">
            </div>
            <div class="flexbox">
               <div class="grupo expira">
                  <label for="selectMes">Expiracion</label>
                  <div class="flexbox">
                     <div class="grupo-select">
                        <select name="mes" id="selectMes">
                           <option disabled selected>Mes</option>
                        </select>
                        <select name="year" id="selectYear">
                           <option disabled selected>Año</option>
                        </select>
                        <label for="inputCCV">CCV</label>
                        <input type="text" id="inputCCV" maxlength="3">
                     </div>
                  </div>
               </div>
               <button type="reset">Cancelar</button>
               <button type="submit">Enviar</button>
            </div>
         </form>   
      </div>   
      <div class="envio" style="border:1px solid white;">
            <form action="medios-de-envio" method="get" >
               <div class="envio">        
                  <p style="font-size: 18px;">SELECCIONA MEDIO DE ENVIO</P>
                  <select Medios de envio="select">
                     <option value="0">seleccione</option>
                     <option value="1">A domicilio</option>
                     <option value="2">Andreani</option>
                     <option value="3">Correo Argentino</option>
                  </select>
               </div>
         
               <br>    
               <div class="cart-total">
                  <h5>TOTAL DEL CARRITO: </h5>
                  <div class="subtotal">
                     <p>Subtotal</p>
                     <span class="total"> $128.400,00</span>
                  </div>
                  <br>
               <a class="btn-actualizar" href="/products/checkout" >FINALIZAR COMPRA</a>                   
            </div>
         </form>
      </div>   
      
   </main>
   <%- include('../partials/footer.ejs') %>
   <script src="/js/coffecode.js"></script>
   <script>
      document.addEventListener('DOMContentLoaded', function() {
         const totalAPagar = localStorage.getItem('totalValue');
         if (totalAPagar) {
            const mostrarTotal = document.querySelector('.total');
            if (mostrarTotal) {
                mostrarTotal.textContent = `$${parseFloat(totalAPagar).toFixed(2)}`;
            }
         }
      });
   </script>
   
</body>
</html>