<%- include('../partials/head.ejs') %>    
   <link rel="stylesheet" href="/css/productCart_detalle.css">
</head>
<body>
    <header>
        <div class="frase">
            <h5>"UN BUEN CAFÉ PUEDE TRANSFORMAR UN MAL DÍA EN UNA VICTORIA."</h5>
        </div>
        <div class="header-content">
            <div>
                <a href="/"> <img src="/img/logo.svg" alt="Logo del Café" class="logo"></a>
            </div>
            <nav>
                <ul class="nav-links">
                  
                    <li><% if(user.categoria==="ADMINISTRADOR"){%>
                            <a class="link-a" href="/admin/register" style="display: flex;"><i class="fas fa-plus-circle" style="padding-right: 2px;"></i> PRODUCTOS</a></li>
                   <% } %>
                    <li><a class="link-a" href="#productos">PRODUCTOS</a></li>
                    <li><a class="link-a" href="/about">INFORMACIÓN</a></li>
                    <li class="search-container">
                        <input type="text" placeholder="¿Qué estás buscando?">
                        <button>BUSCAR</button>
                    </li>
                    <li class="cart-icon">
                        <a href="/products/cart">
                            <img src="/img/carrito.png" alt="Carrito de Compras">
                        </a>
                    </li>
                    <li class="login1">
                        <a href="/user/login">
                            <% if(user){%>
                             <img src="/img/perfil/<%= user.imagen %>" alt="Login">
                             <% } else { %>
                                <img src="/img/login.png" alt="Login">
                            <% } %>
                        </a>
                    </li>
                    <li><a href="/logout"><i class="fas fa-times-circle"></i>salir</a></li>
                </ul>
            </nav>
        </div>
    </header>
   
    <main class="cart-panel">
            <div class="cart-body">
                <form action="/" method="get" class="cart-form borde-derecho">
                    <div class="titulos">        
                        <h5>PRODUCTO</h5>
                        <h5>CANTIDAD</h5>
                    </div> 
                    <div class="cart-body1">
                            <div class="cart-items">
                                <div class="cart-item" >
                                    <div class="cart-item-delete">
                                        <button type="button">
                                        <i class="fa fa-close"></i>
                                        </button>
                                    </div>      
                                    <div class="cart-item-imagen">
                                    <img src="/img/imagen_producto.jpg">                           
                                    </div>
                                    <div class="cart-item-detalle">
                                        <h6 class="cart-item-name">
                                            BLEND DE LA CASA
                                        </h6>
                                    
                                
                                        <p class="cart-item-descripcion">                              
                                            ELEGÍ TU MOLIENDA: 
                                            En Grano
                                        </p>
                                        <p class="cart-item-descripcion">
                                            ELEGÍ EL PESO: 
                                            250 Gr.                               
                                        </p>
                                    </div>                                        
                                                                                    
                                        <div class="container-group-1">
                                            <p>-</p>
                                            <input type="text"  value="1" >
                                            <p>+</p>                          
                                    </div>
                                </div>
                                <div class="cart-item-subtotal">     
                                    <p> 2 × $12,200.00</p>
                                </div>   
                            </div>
                            <div class="cart-items">
                                <div class="cart-item" >
                                    <div class="cart-item-delete">
                                        <button type="button">
                                        <i class="fa fa-close"></i>
                                        </button>
                                    </div>      
                                    <div class="cart-item-imagen">
                                    <img src="/img/imagen-producto3.jpg">                           
                                    </div>
                                    <div class="cart-item-detalle">
                                        <h6 class="cart-item-name">
                                            BLEND DE LA CASA
                                        </h6>
                                    
                                
                                        <p class="cart-item-descripcion">                              
                                            ELEGÍ TU MOLIENDA: 
                                            Molido Filtro
                                        </p>
                                        <p class="cart-item-descripcion">
                                            ELEGÍ EL PESO: 
                                        1 Kilo.                               
                                        </p>
                                    </div>                                        
                                                                                    
                                        <div class="container-group-1">
                                            <p>-</p>
                                            <input type="text"  value="1" >
                                            <p>+</p>                          
                                    </div>
                                </div>
                                <div class="cart-item-subtotal">     
                                    <p> 2 × $12,200.00</p>
                                </div>   
                            </div>
                            <div class="botones">                    
                                <a href="/" class="btn"><i class="fa fa-arrow-left"></i>  SEGUIR COMPRANDO</a>
                            <a href="/products/edit" class="btn-actualizar">ACTUALIZAR CARRITO </a>                  
                            </div>
                    </div>   
                </form>
                <form action="/products/checkout" method="get" class="cart-form">     
                    <div class="finalizar_compra">
                        
                        <div class="cart-total titulos">
                            <h5>TOTAL DEL CARRITO: </h5>                        
                        </div>
                        <div class="subtotal">
                            <p>Subtotal  </p><span> $128.400,00</span>
                        </div>
                        
                        <label>Envio</label>  
                        <div class="envio">
                            <input type="radio" value="1" name="envio" checked> 
                            <label for="">Envío gratuito a domicilio en compras superiores a $ 40000</label>
                        </div> 
                        <div class="envio">
                            <input type="radio" value="1" name="envio" > 
                            <label for="">Envío a domicilio (todo el país): $6,500.00</label>
                        </div> 
                        <div class="envio">
                            <input type="radio" value="1" name="envio" > 
                            <label for="">Retiro por Local (Gratis)</label>
                        </div> 
                
                        <div class="subtotal">
                            <p>Total  </p><span> $128.400,00</span>
                        </div>
                        <input type="submit" class="btn-fin" value="FINALIZAR LA COMPRA" name="fin_compra">
                    </div>
                </form>    
            </div>    
        </form>
    </main>
    
    <%- include('../partials/footer.ejs') %>
    
</body>
</html>
