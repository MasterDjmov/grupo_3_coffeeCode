<%- include('../partials/head.ejs') %>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"/>
        <script src="https://kit.fontawesome.com/138f4028c4.js" crossorigin="anonymous"></script>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
        
        <link rel="stylesheet" href="/css/productDetail.css">
</head>
<body>
    <div class="frase">
        <h4>TU ÉXITO Y TU FELICIDAD DEPENDEN DE TÍ</h4>
    </div>
    <header>
        <div class="header-content">
            <div class="contenedor-logo">
                <img src="/img/logo.svg" alt="Logo del Café" class="logo" onclick="location.href='/'">
            </div>
            <nav>
                <ul class="nav-links">
                    <li><a class="link-a" href="#productos">PRODUCTOS</a></li>
                    <li><a class="link-a" href="#informacion">INFORMACIÓN</a></li>
                    <li class="search-container">
                        <input type="text" placeholder="¿Qué estás buscando?">
                        <button>BUSCAR</button>
                    </li>
                    <li class="cart-icon">
                        <a href="/products/cart">
                            <img src="/img/carrito.png" alt="Carrito de Compras">
                        </a>
                    </li>
                    <li class="login1">
                        <a href="/user/login">
                            <img src="/img/login.png" alt="Login">
                        </a>
                    </li>
                </ul>
            </nav>
        </div>


    </header>
    <main>
        <div class="caja-producto">
            
        <div class="producto1">
            <div class="botones-admin">
                <a href="/admin/edit" >Editar Producto</a>
                <a href="/admin/register">Registrar Producto</a>   
            </div>
            <img src="<%= cafe.imagen %>" alt="imagen de prueba" class="imagen-producto1">
            <ol class= "navbar">
            <li class="navbar-item"> <a href='/'> Incio</a></li>
            <li class="navbar-item"> <a href="#"> Cafe de especialidad</a></li>
            <li class="navbar-item"> <a href="#"> <%= cafe.nombre %></a></li>
            </ol>
        </div>
        <div class="descripcion-producto">
        <h3><%= cafe.nombre %></h3>
        <h3>$ <%= cafe.precio %></h3>

        <button class="acordeon">Llega recién tostado dentro de las 72hs hábiles<i class="fa-solid fa-chevron-down"></i></button>
        <div class="panel">
            <p>
                Envío: $2.000 o gratis a partir de compras mayores a $ 20.000.
                Los envíos demoran en La Rioja e interior de 24 a 48 horas, y en el interior del país, 
                de 3 a 4 días hábiles.
            </p>
        </div>

        <!--codigo para menu acordeon -->
        <script>
            let elementoAcordeon = document.getElementsByClassName("acordeon");
            for(let i=0; i<elementoAcordeon.length; i++ ){
                elementoAcordeon[i].addEventListener("click", function(){
                    this.classList.toggle("active");
                    let panel = this.nextElementSibling;
                    if(panel.style.display == "block"){
                        panel.style.display = "none";
                    }else{
                        panel.style.display = "block"
                    }
                });
            }
        </script>
        <div class="descripcion">
            <h5><%= cafe.descripcion %>
                
            </h5>
            <h5>
                <%= cafe.descripcionLarga %>
                Combina cafés naturales y lavados.
            </h5>
            <br>
            <p class="texto">
            El café que servimos todos los días en nuestras
            cafeterías en nuestra provincia. Balanceado y versátil,
            se adapta a cualquier método y gusto.
            </p>
        </div>
<br>
        <p style="margin-bottom: 0px; padding-left: 20px;">        
            <strong>Envíos a todo el país.</strong>
        </p>
        <span>
            <strong class="parrafo1">GRATIS EN COMPRAS MAYORES A </strong>
            <strong class="parrafo1">$30.000</strong>
        </span>

        <table class="variaciones" cellspacing="0" role="presentation">
           
            <label for="opciones">
                <h4>¿Cómo querés tu café?</h4>
                <select name="tipo" value="tipo de cafe">
                    <option selected="selected"> Elegi tu opción</option>
                    <option value="grano" > En grano</option>
                    <option value="aeropress"> Molido aeropress</option>
                    <option value="filtro"> Molido filtro</option>
                    <option value="francesa"> Modo prensa Francesa</option>
                    <option value="volturno"> Modo Volturno</option>
                </select>
                <div class="botones">
                    <button type="menu">250Gr.</button>
                    <button>1 Kilo</button>    
                </div>
                <button class="borrar" type="reset">LIMPIAR</button>

                <script>
    
                    function $(id)
                    {
                        return document.getElementById(id);
                    }
            
                    function increase()
                    {
                        $('counter').value = parseInt($('counter').value) + 1;
                    }
            
                    function decrease()
                    {
                        var counterValue = parseInt($('counter').value);
                        var newCounterValue = (counterValue)
                            ? counterValue - 1
                            : 0;
            
                        $('counter').value = newCounterValue;
                    }
                </script>
                
                 <div class="counter-group">
                    <div class="container-group-1">
                    <button class="di" onclick="decrease()">-</button>
                    <input type="number" min="1" step="1" value="0" id="counter">
                    <button class="di" onclick="increase()">+</button>
                    </div>
                    <a href="/products/cart" class="carrito" ><strong> Agregar al carrito</strong></a>
                </div>
            </label>
           
        </table>
        </div>
        </div>

        <div class="descripcion2">
            <div class="sabor">
            <h3>Descripción del sabor</h3>
            <img src="<%= cafe.imagenMedidor %>" alt="medidor" class="imagen-medidor">
            <h3 style="font-size: 15px;">Cuerpo</h3>
            <img src="<%= cafe.imagenMedidor %>" alt="medidor" class="imagen-medidor1">
            <h3 style="font-size: 15px;">Acidez</h3>

            <i class="fa-solid fa-mug-hot"></i>
            <h3>Recomendamos</h3>
            <h4>Para Espresso o Filtro, con o sin leche</h4>
            </div>
            <img src="<%= cafe.imagenSecundaria %>" alt="imagen de producto al aire libre" class="imagen-producto2">
        </div>
        <div class="descripcion3">
            <ul class="descripcion-bar">
                <li class="descripcion-bar-item"><strong>Detalles del producto</strong></li>
                <li class="descripcion-bar-item"><strong>País<p><%= cafe.pais %></p></strong></li>
                <li class="descripcion-bar-item"><strong> Productor<p><%= cafe.productor %></p> </strong></li>
                <li class="descripcion-bar-item"><strong> Región<p>Varios.</p> </strong></li>
                <li class="descripcion-bar-item"><strong> Altitud<p>Entre 800 y 1650M</p> </strong></li>
                <li class="descripcion-bar-item"><strong> Procesamiento<p style="padding-top: 10px;">50% Natural</p><p style="margin-bottom: 10px; position: relative;bottom: 20px;">50% Lavado</p> </strong></li>
            </ul>
        </div>

        <h4 class="gusto">También podría gustarte</h4>
        <div class="otros-productos">
            
            <form action="/products/cart">
            <article class="caja-articulo">
            <img src="/img/products/oracle.png" alt="imagen cafe guatemala">
            <strong><p class="descripcion-imagen"> Cafe oracle</p></strong>
            <strong> <p class="descripcion-imagen"> $20.000</p> </strong>
            <button>Agregar al carrito</button>
            </article>
        </form>
        <form action="/products/cart">
            <article class="caja-articulo">
                <img src="/img/products/express.png" alt="imagen cafe Brasil">
                <strong><p class="descripcion-imagen"> Café express</p></strong>
                <strong><p class="descripcion-imagen"> $10.800</p> </strong>
                <button>Agregar al carrito</button>
                </article>
        </form>
        </div>



    </main>
    <%- include('../partials/footer.ejs') %>
    
</body>
</html>
