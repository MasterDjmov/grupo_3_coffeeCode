<%- include('../partials/head.ejs') %>
<link rel="stylesheet" href="/css/index.css">
</head>
<body>
    <main>
    <%- include('../partials/header.ejs')%>
    <h2>Resultados de búsqueda para "<%= key %>"</h2>
<div class="contenedor-productos">
    <% if (productos.length > 0) { %>
        <% productos.forEach(cafe => { %>
            <!-- Muestra tus productos como lo haces normalmente -->
            <article class="producto">
                <img src="/img/products/<%= cafe.imagen_principal %>" alt="Producto">
                <h3><%= cafe.nombre_producto %></h3>
                <p><%= cafe.descripcion_corta %></p>
                <a href="/products/detail/<%= cafe.id_producto %>">
                    <button>VER MÁS</button>
                </a>
            </article>
        <% }) %>
    <% } else { %>
        <p>No se encontraron productos que coincidan con tu búsqueda.</p>
    <% } %>
</div>
    </main>
<%- include('../partials/footer.ejs') %>
</body>
</html>