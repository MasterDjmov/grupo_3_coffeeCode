        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&display=swap" rel="stylesheet">
        <link rel="stylesheet" href="/css/editProduct.css">
</head>
<body>
</div>
<header>
    <div class="header-content">
        <div class="contenedor-logo">
            <img src="/img/logo.svg" alt="Logo del Café" class="logo" onclick="location.href='/'">
        </div>
        <nav>
            <ul class="nav-links">
                <li><a class="link-a" href="#productos">PRODUCTOS</a></li>
                <li><a class="link-a" href="#informacion">INFORMACIÓN</a></li>
                <li class="search-container">
                    <input type="text" placeholder="¿Qué estás buscando?">
                    <button>BUSCAR</button>
                </li>
                <li class="cart-icon">
                    <a href="/products/cart">
                        <img src="/img/carrito.png" alt="Carrito de Compras">
                    </a>
                </li>
                <li class="login1">
                    <a href="/user/login">
                        <img src="/img/login.png" alt="Login">
                    </a>
                </li>
            </ul>
        </nav>
    </div>
</header>
    <main>
    <div class="container">
        <h1>Editar Producto</h1>
        <form action="/" method="get">
            <div class="form-group">
                <label for="productName">Nombre del Producto</label>
                <input type="text" id="productName" name="productName" value="Producto Ejemplo" required>
            </div>
            <div class="form-group">
                <label for="productDescription">Descripción</label>
                <textarea id="productDescription" name="productDescription" rows="4" required>Descripción del producto</textarea>
            </div>
            <div class="form-group">
                <label for="productPrice">Precio</label>
                <input type="number" id="productPrice" name="productPrice" step="0.01" value="100.00" required>
            </div>
            <div class="form-group">
                <label for="productImage">Imagen del Producto (URL)</label>
                <input type="text" id="productImage" name="productImage" value="https://example.com/imagen.jpg" required>
            </div>
            <div class="form-group">
                <label for="opciones">
                    Categoría
                    </label>
                    <select name="tipo" value="categoría">
                        <option value="" disabled selected> Elegi tu opción</option>
                        <option value="café Especialidad" >Café Especialidad</option>
                        </select>
            </div>
            <div class="form-group">
                <label for="colorPicker">Selecciona un color:</label>
            <input type="color" id="colorPicker" name="colorPicker" value="#ff0000" onchange="updateColor()">
            <span id="colorDisplay" style="background-color: #ff0000;"></span>
            </div>
            <div class="form-group">
                <button>Guardar Cambios</button>
            </div>
        </form>
        <script>
            function updateColor() {
                const colorPicker = document.getElementById('colorPicker');
                const colorDisplay = document.getElementById('colorDisplay');
                // Cambiar el color del span según el color seleccionado
                colorDisplay.style.backgroundColor = colorPicker.value;
            }
        </script>
    </div>
    </main>
    <%- include('../partials/footer.ejs') %>

</body>
</html>
